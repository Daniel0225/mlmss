<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/titlebar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/titlebar_leftIV"
            android:layout_width="13.5dp"
            android:layout_height="18dp"
            android:src="@drawable/titlebar_arrow_white"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/titlebar_leftTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="4.5dp"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:text="返回"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/whiteColor"
        android:paddingLeft="67.5dp"
        android:paddingRight="67.5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="20sp"
        android:text=""
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/titlebar_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >
        <ImageView
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:src="@drawable/search_icon_white"
            />
    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/titlebar_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingRight="9dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:id="@+id/titlebar_actionIV"
            android:layout_width="13.5dp"
            android:layout_height="13.5dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/titlebar_actionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="4.5dp"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:text=""
            />
    </LinearLayout>

</RelativeLayout>