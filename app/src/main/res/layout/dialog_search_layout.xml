<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="800px"
            android:layout_height="70px"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="42px"
            android:layout_marginTop="365px"
            android:background="@drawable/shape_search_layout">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:focusable="false"
                android:hint="@string/hint_search"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="30px"
                />

            <ImageView
                android:id="@+id/ivClear"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@drawable/delet_nor"/>
        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputGridView"
        android:layout_below="@+id/rlTop"
        android:layout_marginEnd="30px"
        android:layout_marginStart="30px"
        android:layout_weight="1"
        android:horizontalSpacing="8px"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:verticalSpacing="8px"
        />

    <GridView
        android:id="@+id/inputGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/dialogBgColor"
        android:gravity="center"
        android:horizontalSpacing="6px"
        android:listSelector="@color/transparent"
        android:numColumns="3"
        android:paddingBottom="24px"
        android:paddingEnd="231px"
        android:paddingStart="237px"
        android:paddingTop="18px"
        android:verticalSpacing="6px"
        />
</RelativeLayout>