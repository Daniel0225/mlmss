<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MainFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/whiteColor"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/quhuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="52px"
                android:layout_height="52px"
                android:src="@drawable/tab_quhuo_press"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/tab_quhuo"
                android:textColor="#252525"
                android:textSize="22px"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/gouwuche"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            >
            <LinearLayout
                android:id="@+id/llCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:src="@drawable/tab_gouwuche_press"
                    />

                <TextView
                    android:id="@+id/tv_shop_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:text="@string/tab_gouwuche"
                    android:textColor="#252525"
                    android:textSize="22px"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/tvCartPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="34px"
                    android:layout_alignBottom="@id/llCart"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_blue_line16px"
                    android:gravity="center"
                    android:minWidth="88px"
                    android:paddingLeft="8px"
                    android:paddingRight="8px"
                    android:text="1111"
                    android:textColor="@color/redColor"
                    android:textSize="18px"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvCartCount"
                android:layout_width="21px"
                android:layout_height="21px"
                android:layout_alignParentTop="@id/llCart"
                android:layout_alignRight="@id/llCart"
                android:background="@drawable/shape_red_circle"
                android:gravity="center"
                android:textColor="@color/whiteColor"
                android:textSize="14px"
                android:visibility="gone"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/huodong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <ImageView
                android:layout_width="52px"
                android:layout_height="52px"
                android:src="@drawable/tab_huodong_press"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/tab_huodong"
                android:textColor="#252525"
                android:textSize="22px"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>