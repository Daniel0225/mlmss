<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900px"
    android:layout_height="160px"
    android:background="@drawable/shape_bluelight_line"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px">

        <ImageView
            android:id="@+id/ivGoodsImg"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_centerVertical="true"
            android:layout_marginStart="28px"
            android:src="@drawable/chanpin"
            />

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivGoodsImg"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10px"
            android:layout_marginTop="45px"
            android:layout_marginEnd="30px"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="青岛香酥鱼骨粒"
            android:textColor="#ff000000"
            android:layout_toStartOf="@+id/ivJian"
            android:layout_toEndOf="@+id/ivGoodsImg"
            android:textSize="24px"
            />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodsName"
            android:layout_marginStart="10px"
            android:layout_marginTop="25px"
            android:layout_toRightOf="@id/ivGoodsImg"
            android:text="¥"
            android:textColor="#D0021B"
            android:textSize="18px" />

        <TextView
            android:id="@+id/tvGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodsName"
            android:layout_marginStart="3px"
            android:layout_marginTop="17px"
            android:layout_toRightOf="@id/money"
            android:text="12.8"
            android:textColor="#D0021B"
            android:textSize="30px"
            />

        <ImageView
            android:id="@+id/ivJian"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/goods_num"
            android:src="@drawable/jian"
            />

        <TextView
            android:id="@+id/goods_num"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivAdd"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="36px"
            />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_centerVertical="true"
            android:layout_marginRight="135px"
            android:layout_toLeftOf="@+id/iv_delete"
            android:src="@drawable/add_nor"
            />

        <View
            android:layout_width="1px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginRight="67px"
            android:layout_toLeftOf="@+id/iv_delete"
            android:background="#D7DDF9" />
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="38px"
            android:layout_height="42px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="55px"
            android:src="@drawable/lajitong_nor"
            />
    </RelativeLayout>

</LinearLayout>