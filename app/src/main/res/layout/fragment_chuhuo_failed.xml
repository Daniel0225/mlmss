<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".fragment.ChuhuoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/whiteColor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="41px"
                android:layout_height="41px"
                android:layout_marginStart="38px"
                android:src="@drawable/close_nor"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_tuikuan"
                android:textColor="@color/text_dark"
                android:textSize="37px" />

            <TextView
                android:id="@+id/count_down"
                android:layout_width="90px"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="60s"
                android:textColor="@color/black"
                android:textSize="32px" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/shibai"
                android:layout_width="112px"
                android:layout_height="112px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="169px"
                android:src="@mipmap/shibai" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivCode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46px"
                android:text="1/10"
                android:textColor="@color/text_dark"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="360px"
                android:text="退款将会在5分钟内退回到原账号~"
                android:textColor="#747474"
                android:textSize="26px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="315px"
                android:text="@string/quhuo_msg"
                android:textColor="@color/colorPrimary"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="320px"
                android:layout_height="80px"
                android:layout_marginStart="211px"
                android:layout_marginTop="436px"
                android:background="@drawable/shape_blue_light"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="@color/colorPrimary"
                android:textSize="30px"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tvCommit"
                android:layout_width="320px"
                android:layout_height="80px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="211px"
                android:layout_marginTop="436px"
                android:background="@drawable/shape_blue_dark"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/withe"
                android:textSize="30px" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>