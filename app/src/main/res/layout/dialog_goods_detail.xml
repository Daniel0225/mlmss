<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_layout">

    <ImageView
        android:id="@+id/ivGoodsImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chanpin" />

    <TextView
        android:id="@+id/tvGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivGoodsImg"
        android:layout_centerHorizontal="true"
        android:text="¥12.8"
        android:textColor="#ffd0021b"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGoodsPrice"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="青岛香酥鱼骨粒"
        android:textColor="#ff000000"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGoodsName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBuyImm"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_lb"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/buy_imm"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvAddCart"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_rb"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/add_cart"
            android:textColor="@color/whiteColor" />
    </LinearLayout>
</RelativeLayout>