<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:src="@drawable/head_order" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/withe"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/arrowleft" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pay_order"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:gravity="center"
            android:text="60s"
            android:textColor="#ff000000"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/head_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/order_round" />

        <LinearLayout
            android:layout_width="283dp"
            android:layout_height="248dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/order_withe_bg"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="@string/pay_price"
                android:textColor="#ff000000"
                android:textSize="7sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="￥18.00"
                android:textColor="#ff000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="#ffe5e7f1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="商品数量"
                    android:textColor="#ff000000"
                    android:textSize="7sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:text="2件"
                    android:textColor="#ff000000"
                    android:textSize="7sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ffe5e7f1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="请选择一种支付方式支付"
                android:textColor="#ff000000"
                android:textSize="7sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:src="@drawable/head_order" />

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginLeft="26dp"
                    android:src="@drawable/head_order" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="201dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:background="@drawable/head_order" />
</LinearLayout>