<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pay_ad_iv"
        android:layout_width="match_parent"
        android:layout_height="500px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/withe"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39px"
                android:background="@drawable/back_nor"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pay_order"
            android:textColor="@color/black"
            android:textSize="37px" />

        <TextView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="38px"
            android:gravity="center"
            android:text="60s"
            android:textColor="#ff000000"
            android:textSize="32px" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="900px"
        android:layout_height="861px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:background="@drawable/dingdan"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="122px"
            android:gravity="center"
            android:text="@string/pay_price"
            android:textColor="#ff000000"
            android:textSize="20px" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29px"
            android:gravity="center"
            android:text="¥ 18.00"
            android:textColor="#ff000000"
            android:textSize="70px" />

        <TextView
            android:id="@+id/origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6px"
            android:text="¥ 18.00"
            android:visibility="gone" />

        <View
            android:layout_width="600px"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43px"
            android:background="#E5E7F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185px"
                android:layout_weight="1"
                android:text="商品数量"
                android:textColor="#ff000000"
                android:textSize="20px" />

            <TextView
                android:id="@+id/total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="179px"
                android:text="2件"
                android:textColor="#ff000000"
                android:textSize="20px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185px"
                android:layout_weight="1"
                android:text="优惠金额"
                android:textColor="#D03B02"
                android:textSize="20px" />

            <TextView
                android:id="@+id/free_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="179px"
                android:text="¥ 18.00"
                android:textColor="#D03B02"
                android:textSize="20px" />
        </LinearLayout>

        <View
            android:layout_width="600px"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23px"
            android:background="#E5E7F1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56px"
            android:gravity="center"
            android:text="请选择一种支付方式支付"
            android:textColor="#ff000000"
            android:textSize="20px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_wx_code"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginStart="212px"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_wx_code"
                android:layout_marginStart="245px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38px"
                    android:layout_height="34px"
                    android:src="@drawable/wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:textSize="20px" />
            </LinearLayout>

            <ImageView
                android:id="@+id/zhifubao"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="212px"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/iv_wx_code"
                android:layout_marginEnd="247px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@drawable/zfb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="支付宝支付"
                    android:textColor="@color/black"
                    android:textSize="20px" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/show_coupon"
        android:layout_width="621px"
        android:layout_height="144px"
        android:layout_gravity="center"
        android:background="@drawable/youhuiquan"
        android:scaleType="center"
        android:visibility="gone" />
</LinearLayout>