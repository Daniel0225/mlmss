<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="150dp"
    android:layout_height="133dp"
    android:id="@+id/rvRoot"
    android:background="@color/whiteColor"
    android:foreground="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/ivGoodsImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/chanpin"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="青岛香酥鱼骨粒"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivGoodsImg"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvGoodsName"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tvGoodsPrice"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥12.8"
            android:singleLine="true"
            android:textColor="#ffd0021b"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            />
        
        <ImageView
            android:id="@+id/ivAddCart"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_gravity="right"
            android:src="@drawable/go_nor"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivNoGoods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/chanpin_nor"
        android:padding="20dp"
        android:visibility="gone"
        />
</RelativeLayout>