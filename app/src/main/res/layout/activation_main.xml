<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f2f4fd"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="161px"
                android:layout_height="wrap_content"
                android:text="编    号:"
                android:textColor="@color/text_black"
                android:textSize="40px" />

            <EditText
                android:id="@+id/tv_no"
                android:layout_width="660px"
                android:layout_height="100px"
                android:background="@drawable/round_activation"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="请输入编号"
                android:lines="1"
                android:paddingLeft="42px"
                android:textColor="@color/black"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="163px"
                android:layout_height="wrap_content"
                android:text="激活码:"
                android:textColor="@color/text_black"
                android:textSize="40px" />

            <EditText
                android:id="@+id/tv_cdkey"
                android:layout_width="660px"
                android:layout_height="100px"
                android:background="@drawable/round_activation_no"
                android:hint="请输入激活码"
                android:inputType="number"
                android:paddingLeft="42px"
                android:textColor="@color/black"
                android:textSize="36px" />
        </LinearLayout>

        <TextView
            android:id="@+id/activation"
            android:layout_width="600px"
            android:layout_height="101px"
            android:layout_marginTop="76px"
            android:background="@drawable/shape_blue_light"
            android:gravity="center"
            android:text="激活"
            android:textColor="@color/colorPrimary"
            android:textSize="36px"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>