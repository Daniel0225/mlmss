<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="750px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@drawable/shape_blue_rt_lt"
        android:gravity="center"
        android:text=""
        android:textColor="@color/whiteColor"
        android:textSize="40px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430px"
        android:background="@drawable/shape_white_rb_lb">

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="147px"
            android:text="1111"
            android:textColor="#333333"
            android:textSize="34px" />


            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="300px"
                android:layout_height="80px"
                android:layout_below="@+id/tvDesc"
                android:layout_marginStart="39px"
                android:layout_marginTop="128px"
                android:background="@drawable/shape_blue_light"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="30px"
                android:visibility="visible" />

        <TextView
            android:id="@+id/tvCommit"
            android:layout_width="300px"
            android:layout_height="80px"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvDesc"
            android:layout_marginEnd="38px"
            android:layout_marginTop="128px"
            android:background="@drawable/shape_blue_dark"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/withe"
            android:textSize="30px"
            android:visibility="visible" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="61px"
        android:layout_height="62px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18px"
        android:src="@drawable/dialog_close_nor"
        />

</LinearLayout>