<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvRoot"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/shape_item_layout"
    android:foreground="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/ivGoodsImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/chanpin"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivGoodsImg"
        android:text="红烧大猪蹄"
        android:singleLine="true"
        android:textColor="@color/text_nomorl"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tvGoodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥12.8"
        android:textColor="#ffd0021b"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvGoodsName"
        />
</RelativeLayout>