<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue_rt_lt"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="同步商品信息"
        android:textColor="@color/whiteColor"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_rb_lb"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/cpbProgress"
            app:progress_text_color="@color/colorPrimary"
            app:progress_text_size="18sp"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_below="@id/cpbProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="正在同步商品信息…"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_nomorl"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/dialog_close_nor"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>