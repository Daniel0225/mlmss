<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="750px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@drawable/shape_blue_rt_lt"
        android:gravity="center"
        android:text="同步商品信息"
        android:textColor="@color/whiteColor"
        android:textSize="40px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430px"
        android:background="@drawable/shape_white_rb_lb">

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/cpbProgress"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            app:progress_stroke_width="20px"
            app:progress_text_color="@color/colorPrimary"
            app:progress_text_size="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cpbProgress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34px"
            android:text="正在同步商品信息…"
            android:textColor="#333333"
            android:textSize="34px" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="61px"
        android:layout_height="61px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:src="@drawable/dialog_close_nor"
        />

</LinearLayout>